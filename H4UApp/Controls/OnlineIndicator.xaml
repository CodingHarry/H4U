<UserControl
    x:Class="H4UApp.Controls.OnlineIndicator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:H4UApp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.Resources>
        <SolidColorBrush x:Key="Offline" Color="#FFCD3030"/>
        <SolidColorBrush x:Key="Online" Color="#FF44B44E"/>
    </UserControl.Resources>

    <Grid>
        <TextBlock Name="tbIndicator" Foreground="{StaticResource Offline}" TextAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe MDL2 Assets" Text="&#xEA39;" />

    </Grid>
</UserControl>
