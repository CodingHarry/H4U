<UserControl
    x:Class="H4UApp.Controls.ColorPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Button HorizontalAlignment="Stretch">
        <Button.Content>
            <TextBlock Name="tbColorPicker" TextWrapping="Wrap" TextAlignment="Center" FontSize="22" />
        </Button.Content>
        <Button.Flyout>
            <Flyout Placement="Full">
                <Grid Name="gdColors" Loaded="gdColors_Loaded">
                    <Button Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                </Grid>
            </Flyout>
        </Button.Flyout>
    </Button>
</UserControl>
